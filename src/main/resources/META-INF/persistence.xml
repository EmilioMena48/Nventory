<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">
    <persistence-unit name="InventarioPU">
        <class>com.nventory.model.Articulo</class>
        <class>com.nventory.model.ArticuloProveedor</class>
        <class>com.nventory.model.Proveedor</class>
        <class>com.nventory.model.ConfiguracionInventario</class>
        <class>com.nventory.model.EstadoOrdenDeCompra</class>
        <class>com.nventory.model.OrdenDeCompra</class>
        <class>com.nventory.model.OrdenDeCompraArticulo</class>
        <class>com.nventory.model.StockMovimiento</class>
        <class>com.nventory.model.TipoModeloInventario</class>
        <class>com.nventory.model.TipoStockMovimiento</class>
        <class>com.nventory.model.Venta</class>
        <class>com.nventory.model.VentaArticulo</class>
        
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/inventario"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>